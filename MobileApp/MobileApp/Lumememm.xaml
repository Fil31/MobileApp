<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Lumememm">
    <StackLayout>
        <!-- Ведро -->
        <BoxView Color="Brown" WidthRequest="100" HeightRequest="80" 
                 HorizontalOptions="Center" VerticalOptions="Center" />
        <!-- Голова -->
        <BoxView Color="White" WidthRequest="60" HeightRequest="60" 
                 HorizontalOptions="Center" VerticalOptions="Center" 
                 CornerRadius="30" Margin="0,-60,0,0" />
        <!-- Тело -->
        <BoxView Color="White" WidthRequest="100" HeightRequest="100" 
                 HorizontalOptions="Center" VerticalOptions="Center" 
                 CornerRadius="50" Margin="0,20,0,0" />
        <!-- Кнопки управления -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20,0,0">
            <Button Text="Изменить цвет" />
            <Stepper />
            <Slider />
            <Button Text="Сбросить" />
        </StackLayout>
    </StackLayout>
</ContentPage>






